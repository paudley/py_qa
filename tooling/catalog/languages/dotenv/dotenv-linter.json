{
  "schemaVersion": "1.0.0",
  "name": "dotenv-linter",
  "description": "Rust-based linter for dotenv files.",
  "languages": ["dotenv"],
  "phase": "lint",
  "runtime": {
    "type": "rust",
    "package": "dotenv-linter",
    "minVersion": "3.3.0",
    "versionCommand": ["dotenv-linter", "--version"]
  },
  "options": [
    {
      "name": "exclude",
      "type": "path",
      "description": "Directories or files to exclude from linting."
    },
    {
      "name": "skip",
      "type": "list[str]",
      "description": "Rules to skip during linting (e.g. LeadingCharacter)."
    },
    {
      "name": "schema",
      "type": "path",
      "description": "JSON schema used to validate dotenv files."
    },
    {
      "name": "recursive",
      "type": "bool",
      "description": "Recurse into directories when linting."
    },
    {
      "name": "args",
      "type": "list[str]",
      "description": "Additional arguments appended to dotenv-linter."
    }
  ],
  "actions": [
    {
      "name": "lint",
      "command": {
        "strategy": "command_option_map",
        "config": {
          "base": ["dotenv-linter", "--no-color", "--quiet"],
          "appendFiles": false,
          "options": [
            { "setting": "exclude", "type": "path", "flag": "--exclude" },
            { "setting": "skip", "type": "args", "flag": "--skip" },
            { "setting": "schema", "type": "path", "flag": "--schema" },
            { "setting": "recursive", "type": "flag", "flag": "--recursive" },
            { "setting": "args", "type": "args" }
          ]
        }
      },
      "description": "Lint .env files using dotenv-linter.",
      "parser": {
        "strategy": "parser_text",
        "config": {
          "transform": "pyqa.parsers.config.parse_dotenv_linter"
        }
      }
    }
  ],
  "fileExtensions": [".env", ".env.example", ".env.template", "env"],
  "tags": ["requires-cargo"],
  "documentation": {
    "help": {
      "path": "docs/dotenv-linter_help.txt",
      "format": "text"
    },
    "commandHelp": {
      "path": "docs/dotenv-linter_cmd_help.txt",
      "format": "text"
    }
  }
}
