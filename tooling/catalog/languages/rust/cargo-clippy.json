{
  "schemaVersion": "1.0.0",
  "name": "cargo-clippy",
  "description": "Rust linting via cargo clippy.",
  "languages": ["rust"],
  "phase": "lint",
  "runtime": {
    "type": "rust",
    "package": "rustup:clippy",
    "minVersion": "1.81.0",
    "versionCommand": ["cargo", "--version"]
  },
  "options": [
    {
      "name": "args",
      "type": "list[str]",
      "description": "Additional arguments appended to the cargo clippy invocation."
    }
  ],
  "actions": [
    {
      "name": "lint",
      "command": {
        "strategy": "command_option_map",
        "config": {
          "base": ["cargo", "clippy", "--message-format=json"],
          "appendFiles": false,
          "options": [{ "setting": "args", "type": "args" }]
        }
      },
      "appendFiles": false,
      "description": "Run Rust Clippy lints.",
      "parser": {
        "strategy": "parser_json",
        "config": {
          "transform": "pyqa.parsers.misc.parse_cargo_clippy"
        }
      }
    }
  ],
  "fileExtensions": [".rs"],
  "documentation": {
    "help": {
      "path": "docs/cargo-clippy_help.txt",
      "format": "text"
    },
    "commandHelp": {
      "path": "docs/cargo-clippy_cmd_help.txt",
      "format": "text"
    }
  }
}
