{
  "schemaVersion": "1.0.0",
  "name": "eslint",
  "description": "JavaScript linter ESLint.",
  "extends": ["npm_runtime"],
  "languages": ["javascript", "typescript"],
  "phase": "lint",
  "fileExtensions": [".js", ".jsx", ".ts", ".tsx"],
  "configFiles": [".eslintrc.js", ".eslintrc.cjs", ".eslintrc.json", ".eslintrc"],
  "runtime": {
    "type": "npm",
    "package": "eslint",
    "versionCommand": ["eslint", "--version"]
  },
  "options": [
    {
      "name": "args",
      "type": "list[str]",
      "description": "Additional arguments appended to ESLint."
    },
    {
      "name": "cache",
      "type": "bool",
      "description": "Enable ESLint result caching."
    },
    {
      "name": "cache-location",
      "type": "path",
      "description": "Where ESLint stores cache data."
    },
    {
      "name": "config",
      "type": "path",
      "description": "ESLint configuration file or directory."
    },
    {
      "name": "ext",
      "type": "list[str]",
      "description": "Additional file extensions to lint."
    },
    {
      "name": "fix-type",
      "type": "list[str]",
      "description": "Limit fixes to the given rule types."
    },
    {
      "name": "ignore-path",
      "type": "path",
      "description": "Custom .eslintignore file path."
    },
    {
      "name": "max-warnings",
      "type": "int",
      "description": "Exit with error if warnings exceed this count."
    },
    {
      "name": "no-error-on-unmatched-pattern",
      "type": "bool",
      "description": "Treat unmatched patterns as success instead of failure."
    },
    {
      "name": "quiet",
      "type": "bool",
      "description": "Suppress reporting of warnings."
    },
    {
      "name": "report-unused-disable-directives",
      "type": "str",
      "description": "Control reporting for unused eslint-disable comments."
    },
    {
      "name": "resolve-plugins-relative-to",
      "type": "path",
      "description": "Directory from which ESLint resolves plugins."
    },
    {
      "name": "rulesdir",
      "type": "list[str]",
      "description": "Directories containing custom ESLint rules."
    }
  ],
  "actions": [
    {
      "name": "lint",
      "ignoreExit": true,
      "command": {
        "strategy": "command_option_map",
        "config": {
          "base": ["eslint", "--format", "json"],
          "options": [
            { "setting": "config", "type": "path", "flag": "--config" },
            { "setting": "ext", "type": "args", "flag": "--ext" },
            { "setting": "ignore-path", "type": "path", "flag": "--ignore-path" },
            {
              "setting": "resolve-plugins-relative-to",
              "type": "path",
              "flag": "--resolve-plugins-relative-to"
            },
            { "setting": "rulesdir", "type": "path", "flag": "--rulesdir" },
            {
              "setting": "max-warnings",
              "type": "value",
              "flag": "--max-warnings",
              "defaultFrom": "severity.max_warnings"
            },
            { "setting": "cache", "type": "flag", "flag": "--cache", "negateFlag": "--no-cache" },
            { "setting": "cache-location", "type": "path", "flag": "--cache-location" },
            { "setting": "fix-type", "type": "args", "flag": "--fix-type", "joinWith": "," },
            { "setting": "quiet", "type": "flag", "flag": "--quiet" },
            {
              "setting": "no-error-on-unmatched-pattern",
              "type": "flag",
              "flag": "--no-error-on-unmatched-pattern",
              "negateFlag": "--error-on-unmatched-pattern"
            },
            {
              "setting": "report-unused-disable-directives",
              "type": "value",
              "flag": "--report-unused-disable-directives"
            },
            { "setting": "args", "type": "args" }
          ]
        }
      }
    },
    {
      "name": "fix",
      "isFix": true,
      "command": {
        "strategy": "command_option_map",
        "config": {
          "base": ["eslint", "--fix"],
          "options": [
            { "setting": "config", "type": "path", "flag": "--config" },
            { "setting": "ext", "type": "args", "flag": "--ext" },
            { "setting": "ignore-path", "type": "path", "flag": "--ignore-path" },
            {
              "setting": "resolve-plugins-relative-to",
              "type": "path",
              "flag": "--resolve-plugins-relative-to"
            },
            { "setting": "rulesdir", "type": "path", "flag": "--rulesdir" },
            {
              "setting": "max-warnings",
              "type": "value",
              "flag": "--max-warnings",
              "defaultFrom": "severity.max_warnings"
            },
            { "setting": "cache", "type": "flag", "flag": "--cache", "negateFlag": "--no-cache" },
            { "setting": "cache-location", "type": "path", "flag": "--cache-location" },
            { "setting": "fix-type", "type": "args", "flag": "--fix-type", "joinWith": "," },
            { "setting": "quiet", "type": "flag", "flag": "--quiet" },
            {
              "setting": "no-error-on-unmatched-pattern",
              "type": "flag",
              "flag": "--no-error-on-unmatched-pattern"
            },
            {
              "setting": "report-unused-disable-directives",
              "type": "value",
              "flag": "--report-unused-disable-directives"
            },
            { "setting": "args", "type": "args" }
          ]
        }
      }
    }
  ],
  "documentation": {
    "help": {
      "path": "docs/eslint_help.txt",
      "format": "text"
    },
    "commandHelp": {
      "path": "docs/eslint_cmd_help.txt",
      "format": "text"
    },
    "shared": {
      "path": "docs/SHARED_KNOBS.md",
      "format": "markdown"
    }
  }
}
