{
  "schemaVersion": "1.0.0",
  "name": "gts",
  "description": "Google TypeScript style checker.",
  "languages": ["javascript"],
  "phase": "lint",
  "runtime": {
    "type": "npm",
    "package": "gts@5.3.1",
    "minVersion": "5.3.1",
    "versionCommand": ["gts", "--version"]
  },
  "actions": [
    {
      "name": "lint",
      "command": {
        "strategy": "command_option_map",
        "config": {
          "base": ["gts", "lint", "--", "--format", "json"],
          "appendFiles": false,
          "options": [
            {"setting": "project", "type": "path", "flag": "--project"},
            {"setting": "config", "type": "path", "flag": "--config"},
            {"setting": "args", "type": "args"}
          ]
        }
      },
      "description": "Run Google's TypeScript style checks via gts.",
      "parser": {
        "strategy": "parser_json",
        "config": {
          "transform": "pyqa.parsers.javascript.parse_eslint"
        }
      }
    },
    {
      "name": "fix",
      "command": {
        "strategy": "command_option_map",
        "config": {
          "base": ["gts", "fix"],
          "appendFiles": false,
          "options": [
            {"setting": "project", "type": "path", "flag": "--project"},
            {"setting": "config", "type": "path", "flag": "--config"},
            {"setting": "args", "type": "args"}
          ]
        }
      },
      "isFix": true,
      "description": "Apply gts formatting and fixes."
    }
  ],
  "extends": ["npm_runtime"],
  "fileExtensions": [".ts", ".tsx", ".js", ".jsx", ".mjs", ".cjs"],
  "documentation": {
    "help": {
      "path": "docs/gts_help.txt",
      "format": "text"
    },
    "commandHelp": {
      "path": "docs/gts_cmd_help.txt",
      "format": "text"
    },
    "shared": {
      "path": "docs/SHARED_KNOBS.md",
      "format": "markdown"
    }
  }
}
