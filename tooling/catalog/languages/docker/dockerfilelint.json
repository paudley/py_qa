{
  "schemaVersion": "1.0.0",
  "name": "dockerfilelint",
  "description": "Lint Dockerfiles using dockerfilelint.",
  "extends": ["npm_runtime"],
  "languages": ["docker"],
  "phase": "lint",
  "fileExtensions": ["Dockerfile"],
  "runtime": {
    "type": "npm",
    "package": "dockerfilelint",
    "versionCommand": ["dockerfilelint", "--version"]
  },
  "actions": [
    {
      "name": "lint",
      "command": {
        "strategy": "command_dockerfilelint",
        "config": {
          "base": ["dockerfilelint", "--output", "json"]
        }
      },
      "parser": {
        "strategy": "parser_json",
        "config": {
          "transform": "pyqa.parsers.ops.parse_dockerfilelint"
        }
      }
    }
  ],
  "documentation": {
    "help": {
      "path": "docs/dockerfilelint_help.txt",
      "format": "text"
    },
    "commandHelp": {
      "path": "docs/dockerfilelint_cmd_help.txt",
      "format": "text"
    }
  }
}
