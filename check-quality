"""Legacy compatibility entry point for the Python quality check command."""

import sys

from pyqa.cli.app import app


def main() -> int:
    sys.argv.insert(1, "check-quality")
    return app()


if __name__ == "__main__":  # pragma: no cover - thin wrapper
    raise SystemExit(main())
